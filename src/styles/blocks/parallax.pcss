.parallax {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  @include super-wide {
    display: none;
  }

  @include tablets {
    display: none;
  }
}

.parallax__layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: none;
  will-change: transform;
  &:nth-child(1) {
    display: block;
    .parallax__image {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  }
  &:nth-child(2) {
    display: block;
    .parallax__image {
      top: 260px;
      right: 0;
      height: 70%;
      width: 100%;
    }
  }
  &:nth-child(3) {
    display: block;
    .parallax__image {
      left: 50%;
      top: 450px;
      transform: translateX(367px);
    }
  }
  &:nth-child(4) {
    display: block;
    .parallax__image {
      left: 0;
      top: 500px;
      height: 50%;
    }
  }
  &:nth-child(5) {
    display: block;
    .parallax__image {
      left: 0;
      top: 510px;
      height: 50%;
    }
  }
  &:nth-child(6) {
    display: block;
    .parallax__image {
      right: 0;
      bottom: 0;
    }
  }
  &:nth-child(7) {
    display: block;
    .parallax__image {
      left: 0;
      width: 100%;
      bottom: 0;
    }
  }
}

.parallax__image {
  max-width: initial;
  max-height: initial;
  position: absolute;
}