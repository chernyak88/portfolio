.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0;
}

.logo {
  font-size: 36px;
  font-weight: 800;
  cursor: pointer;

  &:hover {
    color: #000;
    transition: 1s;
  }
}

.header__menu {
  flex: 1;
  display: flex;
  justify-content: center;
  margin: 0 20px;
}